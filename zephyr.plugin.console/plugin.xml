<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="zephyr.plugin.console.commands.showconsole"
            name="Show Console">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="zephyr.plugin.console.commands.ShowConsole"
            commandId="zephyr.plugin.console.commands.showconsole">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="zephyr.plugin.console.commands.showconsole"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="zephyr.plugin.common.scheme"
            sequence="M1+C">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:menu.window">
            <command
                  commandId="zephyr.plugin.console.commands.showconsole"
                  id="zephyr.plugin.console.menus.showconsole"
                  mnemonic="C">
            </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:toolbar.window">
         <command
               commandId="zephyr.plugin.console.commands.showconsole"
               id="zephyr.plugin.console.toolbar.showconsole"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="zephyr.plugin.console.commands.showconsole"
            icon="icons/console_view.gif">
      </image>
   </extension>
   <extension
         point="zephyr.plugin.common.startup">
      <client
            class="zephyr.plugin.console.internal.ReDirectSystemToConsole">
      </client>
   </extension>

</plugin>
